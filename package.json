{
  "name": "safeaging",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "backend": "node server.js",
    "setup-db": "node setup-database.js",
    "dev:sandbox": "wrangler pages dev dist --d1=safeaging-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name safeaging",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply safeaging-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply safeaging-db",
    "db:seed": "wrangler d1 execute safeaging-db --local --file=./seed.sql",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "superclaude:audit": "node superclaude-integration.js audit --comprehensive",
    "superclaude:test": "node superclaude-integration.js test --clinical --assessments",
    "superclaude:validate": "node superclaude-integration.js validate-cpt",
    "superclaude:security": "node superclaude-integration.js audit --hipaa --phi",
    "superclaude:accessibility": "node superclaude-integration.js audit --wcag",
    "superclaude:optimize": "node superclaude-integration.js optimize --assessments --mobile",
    "qa:full": "npm run superclaude:audit && npm run superclaude:test && npm run superclaude:validate",
    "cap:build": "npm run build && npx cap sync",
    "cap:sync": "npx cap sync",
    "ios:dev": "npm run cap:build && npx cap open ios",
    "android:dev": "npm run cap:build && npx cap open android",
    "ios:build": "npm run cap:build && npx cap build ios",
    "android:build": "npm run cap:build && npx cap build android"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/camera": "^7.0.2",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/local-notifications": "^7.0.3",
    "@capacitor/network": "^7.0.2",
    "@capacitor/preferences": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "hono": "^4.9.6",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
