# SafeAging Healthcare Application - Environment Variables Template
# Copy this file to .env for local development
# NEVER commit .env files with actual secrets to version control

# ==========================================
# CRITICAL SECURITY CONFIGURATION (REQUIRED)
# ==========================================

# JWT Secret (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long-replace-this

# Database Encryption Key (REQUIRED for production - 32+ characters)
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-32-chars-replace-this-value

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Configuration  
PORT=8787
DATABASE_PATH=healthcare.db

# Session Management (HIPAA compliance - max 24 hours)
SESSION_TIMEOUT_HOURS=8

# ==========================================
# THIRD-PARTY API KEYS
# ==========================================

# OpenAI API (for AI analysis features)
OPENAI_API_KEY=your-openai-api-key-here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ==========================================
# PRODUCTION SECURITY SETTINGS
# ==========================================

# CORS Allowed Origins (production - comma separated)
ALLOWED_ORIGINS=https://safeaging.app,https://app.safeaging.app

# SSL/TLS Configuration
FORCE_HTTPS=true

# ==========================================
# LOGGING & MONITORING
# ==========================================

# Logging Configuration
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA compliance

# ==========================================
# HEALTHCARE COMPLIANCE
# ==========================================

# HIPAA Configuration
HIPAA_AUDIT_LOGGING=true
HIPAA_DATA_ENCRYPTION=true
HIPAA_ACCESS_LOGGING=true