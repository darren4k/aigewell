# SafeAging Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=8787
API_URL=https://api.safeaginghome.com

# Database Configuration
DATABASE_URL=sqlite:./healthcare.db
# For production with Cloudflare D1:
# D1_DATABASE_ID=your-d1-database-id

# Authentication
JWT_SECRET=your-secure-jwt-secret-min-32-chars
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-vision-preview

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
R2_BUCKET_NAME=safeaging-assets
KV_NAMESPACE_ID=your-kv-namespace-id

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=pk_live_your-public-key
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Healthcare Provider Integration
PROVIDER_API_URL=https://provider-api.example.com
PROVIDER_API_KEY=your-provider-api-key

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-key
APNS_KEY_ID=your-apple-push-notification-key-id
APNS_TEAM_ID=your-apple-team-id

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@safeaginghome.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# HIPAA Compliance
AUDIT_LOG_ENABLED=true
ENCRYPTION_KEY=your-32-byte-encryption-key
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA
SESSION_TIMEOUT_MINUTES=15

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com; img-src 'self' data: https:; connect-src 'self' https://api.openai.com"

# App Store Configuration
APP_STORE_ID=com.safeaginghome.app
GOOGLE_PLAY_ID=com.safeaginghome.app

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_VIDEO_CALLS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_PAYMENT_PROCESSING=true
MAINTENANCE_MODE=false